<!--Partials at Top-->
<% include partials/header %>
<% include partials/nav %>


<!-- Form Body-->
<div class="container" style="padding-top: 1em">
    <h4>Add a new staff member</h4>
    <% if (message != "") { %>
    <p class="text-center text-danger"> <%= message %></p>
    <% } %>

    <!-- ERROR MESSAGE AREA -->

    <p class="text-center text-danger" id="error1" name="error1"></p>
    <p class="text-center text-danger" id="error2" name="error2"></p>

    <form action="/staff/new" method="POST" onsubmit="return checkStaffForm(this);" enctype="multipart/form-data">
        <div class="form-group row">
            <label for="f_name" class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="f_name" name="f_name" placeholder="enter first name" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="l_name" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                <input class="form-control" type="text" id="l_name" name="l_name" placeholder="enter last name" required>
            </div>
        </div>


        <!-- LOCATION POPULATED BASED ON LATEST LOCATION VALUES -->
        <div class="form-group row">
            <label for="location" class="col-sm-2 col-form-label">Assign to Location (optional)</label>
            <div class="col-sm-10">
                <select class="form-control form-control-sm" id="location" name="location">
                    <option value="NONE" selected>No Location Assignment</option>
                    <% locations.forEach(function(location) {%>
                    <option value="<%=location.loc_id %>"><%= location.l_name %></option>
                    <% }); %>
                </select>
                <br>
                If "No Location" is selected, Staff will be added but not yet assigned to a location.

            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button class="btn btn-lg btn-primary">Add Staff</button>
            </div>
        </div>
    </form>

</div>

<script type="text/javascript" src="/formvalidator.js"> </script>

<!--Footer Section Here-->
<% include partials/footer %>
