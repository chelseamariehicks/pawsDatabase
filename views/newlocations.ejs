<!--Partials at Top-->
<% include partials/header %>
<% include partials/nav %>

<!-- Form Body-->
<div class="container" style="padding-top: 1em">
    <h4>Add a new location</h4>
<% if (message != "") { %>
<p class="text-center text-danger"> <%= message %></p>
<% } %>

<!-- ERROR MESSAGE AREA -->

<p class="text-center text-danger" id="error1" name="error1"></p>
<p class="text-center text-danger" id="error2" name="error2"></p>

<form action="/locations/new" method="POST" onsubmit="return checkLocationForm(this);" enctype="multipart/form-data">
    <div class="form-group row">
        <label for="l_name" class="col-sm-2 col-form-label">Location name</label>
        <div class="col-sm-10">
            <input class="form-control" type="text" id="l_name" name="l_name" placeholder="enter location name" required>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button class="btn btn-lg btn-primary">Add Location</button>
        </div>
    </div>
    </form>
</div>
    
<script type="text/javascript" src="/formvalidator.js"> </script>

